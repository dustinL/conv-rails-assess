<% content_for(:title, "#{@artist.name} | Concert Collector") %>

<div class="jumbotron">
  <div class="container">
    <h2><%= @artist.name %></h2>
  </div>
</div>

<%= render('layouts/alerts') %>
<div class="container">
  <h3>Upcoming <%= @artist.name %> Shows:</h3>
  <ul>
    <% @artist.shows.each do |show| %>
      <li><%= show.date %> | <%= show.location %></li>
    <% end %>
  </ul>


  <br>
  <p><%= link_to "Add New Show", new_artist_show_path(@artist), :class => "btn btn-primary" %></p><br>
  <p><%= link_to "Edit Artist", edit_artist_path(@artist), :class => "btn btn-warning" %></p>
  <p><%= link_to "Delete Artist", artist_path(@artist),
                           :data => {:confirm => "You sure?",
                                     :method => "delete"},
                           :class => "btn btn-danger" %></p>
</div>
